    <declare-styleable name="LockPatternView">
        <!-- Aspect to use when drawing LockPatternView. Choices are "square"(default), "lock_width"
             or "lock_height" -->
        <attr name="aspect" format="string" />
        <attr name="lineColor" format="color"/>
        <attr name="btnNormalDrawable" format="reference" />
        <attr name="btnSelectedDrawable" format = "reference"/>
        <!-- if the use input is wrong ,the cell will show with this drawable 
           this property will only valid when you create the view with a patten -->
        <attr name="wrongStateDrawable"  format = "reference"/>
        <attr name="isNeedArrow"  format="boolean" />
        <!-- default is true -->
        <attr name="isAutoClear"  format = "boolean" />
        <!-- default is false -->
        <attr name="inputFeedBackEnable" format = "boolean" />
    </declare-styleable>
    <declare-styleable name="ImageViewPager">
        <attr name="flipIntervalN" format="integer" />
        <attr name="pageMarginN" format="integer" />
        <attr name="isNeedIndicatorN" format="boolean" />
        <attr name="isNeedDetectGestrueN" format = "boolean" />
        <attr name="isCirculatedN" format="boolean"/>
        <attr name="indicatorBarBgN" format="color"/>
        <attr name="ratio" format="float"/>
    </declare-styleable>
    
</resources>
